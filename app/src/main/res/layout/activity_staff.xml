<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radius10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="Staff Registration"
                    android:textColor="@color/dimblack"
                    android:textSize="@dimen/text_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height1"
                    android:layout_marginTop="@dimen/margin5"
                    android:background="@color/lightgrey" />


                <EditText
                    android:id="@+id/edttxt_employeename"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width40"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@drawable/rounded_border"
                    android:hint="Enter the employee name"
                    android:inputType="text"
                    android:paddingStart="@dimen/padding5"
                    android:paddingLeft="@dimen/padding5"
                    android:paddingEnd="@dimen/padding5"
                    android:paddingRight="@dimen/padding10" />

                <EditText
                    android:id="@+id/edttxt_mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width40"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@drawable/rounded_border"
                    android:hint="Enter the mobile number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="@dimen/padding5"
                    android:paddingLeft="@dimen/padding5"
                    android:paddingEnd="@dimen/padding5"
                    android:paddingRight="@dimen/padding10" />

                <EditText
                    android:id="@+id/edttxt_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width40"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@drawable/rounded_border"
                    android:hint="Enter the Address"
                    android:inputType="text"
                    android:paddingStart="@dimen/padding5"
                    android:paddingLeft="@dimen/padding5"
                    android:paddingEnd="@dimen/padding5"
                    android:paddingRight="@dimen/padding10" />

                <EditText
                    android:id="@+id/edttxt_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width40"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@drawable/rounded_border"
                    android:hint="Enter valid gmail id"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/padding5"
                    android:paddingLeft="@dimen/padding5"
                    android:paddingEnd="@dimen/padding5"
                    android:paddingRight="@dimen/padding10" />


                <Spinner
                    android:id="@+id/spinner_role"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:backgroundTint="@color/lightgrey" />

                <Spinner
                    android:id="@+id/spinner_staff"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightgrey" />


                <Button
                    android:id="@+id/btn_sendotp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin30"
                    android:background="@color/lightgreen"
                    android:text="Send Otp"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin30"
                    android:background="@color/lightgreen"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>