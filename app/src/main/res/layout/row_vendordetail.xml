<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtview_itemname"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

          <LinearLayout
              android:layout_alignParentRight="true"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/txtview_itemquantity"
                  android:textSize="@dimen/text_14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:text="X"
                  android:textSize="@dimen/text_14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />


              <TextView
                  android:id="@+id/txtview_itemweight"
                  android:textSize="@dimen/text_14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />


              <TextView
                  android:layout_marginLeft="@dimen/margin40"
                  android:layout_marginStart="@dimen/margin40"
                  android:id="@+id/txtview_itemprice"
                  android:textSize="@dimen/text_14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />



          </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

