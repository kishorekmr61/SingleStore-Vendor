<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightsblue"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/txtview_name"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="@dimen/text_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_gravity="right"
                android:background="@color/lightorange"
                android:textColor="@color/white"
                android:id="@+id/txtview_paymentmode"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/margin2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="OrderId:"
                        android:textSize="@dimen/text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtview_orderid"
                        android:textSize="@dimen/text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/margin5"
            android:textStyle="bold"
            android:id="@+id/txtview_address"
            android:textSize="@dimen/text_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/recyclerview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
               android:layout_marginRight="22dp"
                android:text="TotalAmount:"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtview_totalamount"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="48dp"
                android:gravity="left"
                android:text="Discount:"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtview_discount"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="@dimen/margin2"
                android:text="DeliveryCharges:"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtview_delieverycharges"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="72dp"
                android:text="Total:"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtview_total"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:layout_marginTop="@dimen/margin40"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="Cancel Order"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50" />


            <Button
                android:id="@+id/btn_approve"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="Approve"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50" />


        </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>