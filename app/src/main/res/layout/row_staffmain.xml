<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/margin10"
        android:id="@+id/carview_staff"
        android:layout_marginTop="@dimen/margin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="@dimen/margin10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/txtview_staffrole"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:padding="@dimen/padding5"
                  android:textColor="@color/white"
                  android:background="@color/lightorange"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:id="@+id/txtview_staffname"
                  android:textSize="@dimen/text_16"
                  android:textStyle="bold"
                  android:layout_alignParentLeft="true"
                  android:textColor="@color/darkorange"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />


          </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/margin5"
                android:id="@+id/txtview_staffmobileno"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin5"
                android:id="@+id/txtview_staffreportingto"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="@dimen/margin5"
                android:id="@+id/txtview_staffaddress"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>





    </android.support.v7.widget.CardView>



</RelativeLayout>