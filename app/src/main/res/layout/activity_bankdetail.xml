<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentgrey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin10"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/radius10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/margin5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:text="Provide your Bank Details"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dimblack"
            android:layout_marginTop="@dimen/margin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/margin5"
            android:background="@color/lightgrey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height1"/>

        <EditText
            android:id="@+id/edttxt_bankname"
            android:paddingLeft="@dimen/padding5"
            android:paddingStart="@dimen/padding5"
            android:paddingEnd="@dimen/padding5"
            android:paddingRight="@dimen/padding10"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Enter your bank name"
            android:maxLines="2"
            android:inputType="text"
            android:background="@drawable/rounded_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width40" />

        <EditText
            android:id="@+id/edttxt_accountnumber"
            android:paddingLeft="@dimen/padding5"
            android:paddingStart="@dimen/padding5"
            android:paddingEnd="@dimen/padding5"
            android:paddingRight="@dimen/padding10"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Enter your bank account number"
            android:maxLines="2"
            android:maxLength="16"
            android:inputType="number"
            android:background="@drawable/rounded_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width40" />

        <EditText
            android:id="@+id/edttxt_reenternumber"
            android:paddingLeft="@dimen/padding5"
            android:paddingStart="@dimen/padding5"
            android:paddingEnd="@dimen/padding5"
            android:paddingRight="@dimen/padding10"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Re-enter your bank account number"
            android:maxLines="2"
            android:maxLength="16"
            android:inputType="number"
            android:background="@drawable/rounded_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width40" />

        <EditText
            android:id="@+id/edttxt_ifsccode"
            android:paddingLeft="@dimen/padding5"
            android:paddingStart="@dimen/padding5"
            android:paddingEnd="@dimen/padding5"
            android:paddingRight="@dimen/padding10"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Enter the 11 alphanumeric IFSC code"
           android:maxLength="11"
            android:inputType="textWebEditText"
            android:background="@drawable/rounded_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width40" />

        <EditText
            android:id="@+id/edttxt_holdername"
            android:paddingLeft="@dimen/padding5"
            android:paddingStart="@dimen/padding5"
            android:paddingEnd="@dimen/padding5"
            android:paddingRight="@dimen/padding10"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Enter account holder name"
            android:inputType="text"
            android:background="@drawable/rounded_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width40" />

        <Button
            android:id="@+id/btn_save"
            android:layout_gravity="right"
            android:background="@color/lightgreen"
            android:textColor="@color/white"
            android:text="save"
            android:layout_marginTop="@dimen/margin20"
            android:layout_width="@dimen/width120"
            android:layout_height="@dimen/height35" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>